unsigned precedence(const char& op) {

    /*
     The operators used, in order of precedence from highest to lowest are.
        1. ~ (Unary negation) and ^ (Exponentiation)
        2. * (Multiplication) and / (Division)
        3. + (Addition) and - (Subtraction)
    */

    switch (op) {
        case '~': case '^':
            return 3;
            break;
        case '*': case '/':
            return 2;
            break;
        case '+': case '-':
            return 1;
            break;
        default:
            return 0;
    }
}
