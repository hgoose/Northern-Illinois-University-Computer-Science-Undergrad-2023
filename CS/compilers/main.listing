             int hex_stoi(const string& s) {
                int i = 0;
                for (const auto& c : s) {
                    if (isdigit(c)) {
                        i = i * 16 + (c - '0');
                    } else if (c >= 97 && c <= 102) {
                        i = i * 16 + (c - 'a') + 10;
                    } else if (c >= 65 && c <= 70) {
                        i = i * 16 + ((c - 'A') + 10);
                    } else return -1;
                }

                return i;
            }
